<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyAccountActivity"
    android:background="@color/main_color">



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logout_btn"
        android:background="@drawable/full_rounded_view"
        android:text="Logout"
        android:textColor="@color/white"
        android:layout_marginTop="8sp"
        android:layout_marginEnd="8sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/divider"
        android:layout_width="409dp"
        android:layout_height="1dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="256dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/divider2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/my_tickets"
        android:text="My Tickets"
        android:textColor="@color/amber"
        android:textSize="24sp"
        android:layout_marginStart="32sp"
        android:layout_marginEnd="32sp"
        android:background="@color/main_clor_transparent"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintBottom_toTopOf="@id/my_credit_cards"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/my_credit_cards"
        android:text="My Credit Cards"
        android:textColor="@color/amber"
        android:textSize="24sp"
        android:layout_marginStart="32sp"
        android:layout_marginEnd="32sp"
        android:background="@color/main_clor_transparent"
        app:layout_constraintTop_toBottomOf="@id/my_tickets"
        app:layout_constraintBottom_toTopOf="@id/my_fav_genres"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/my_fav_genres"
        android:text="My Favorite Genres"
        android:textColor="@color/amber"
        android:textSize="24sp"
        android:layout_marginStart="32sp"
        android:layout_marginEnd="32sp"
        android:background="@color/main_clor_transparent"
        app:layout_constraintTop_toBottomOf="@id/my_credit_cards"
        app:layout_constraintBaseline_toBottomOf="@id/divider2"/>


    <View
        android:id="@+id/divider2"
        android:layout_width="409dp"
        android:layout_height="1dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="392dp"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>